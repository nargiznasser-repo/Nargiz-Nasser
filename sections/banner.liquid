<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Gift Guide - Tisso Vison</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">
</head>
<body>
  <!-- NAVBAR -->
  <header class="navbar bg-light border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
    
    {% for block in section.blocks %}
  {% if block.type == 'textTitle' %}
    <div class="logo fw-bold fs-5">{{ block.settings.textTitle}}</div>
  {% endif %}
{% endfor %}    

{% for block in section.blocks %}
  {% if block.type == 'textSubTitle' %}
<div class="nav-center text-center d-none d-md-block">{{ block.settings.textSubTitle}}</div>
  {% endif %}
  {% endfor %}

    {% for block in section.blocks %}
      {% if block.type == 'buttonGift' %}
        <a
          href="{{ block.settings.link }}"
          class="choose-gift-btn {{ block.settings.style_class }}"
          {% if block.settings.open_in_new_tab %}
            target="_blank"
          {% endif %}
        >
          {{ block.settings.label }}
          <span class="arrow-icon">
            <svg width="24" height="8" viewBox="0 0 24 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line x1="0" y1="4" x2="22" y2="4" stroke="#000000" stroke-width="1.5"/>
              <path d="M18 0 L24 4 L18 8" stroke="#000000" stroke-width="1.5" fill="none"/>
            </svg>
          </span>
        </a>
      {% endif %}
    {% endfor %}
  </header>

  <!-- COVER SECTION -->
  <section class="cover">
    <!-- Top Decorative Cover -->
    <div class="cover-top">
      <img src="{{ 'top.png' | asset_url }}" alt="Top Decorative Background" class="bg-top img-fluid">
    </div>

    <!-- Main Content Row -->
    <div class="cover-body container-fluid">
      <div class="row align-items-center no-gutters">
        <!-- Left Text Content -->
        <div class="col-lg-6 col-md-12">
          <div class="px-5 px-md-4 px-lg-5 py-4">
            {% for block in section.blocks %}
              {% if block.type == 'textHeading' %}
                <h1 class="title">{{ block.settings.textHeading | strip_html }}</h1>
              {% endif %}
            {% endfor %}

            {% for block in section.blocks %}
              {% if block.type == 'textDesc' %}
                <p class="subtitle">{{ block.settings.textDesc | strip_html }}</p>
              {% endif %}
            {% endfor %}

            {% for block in section.blocks %}
              {% if block.type == 'buttonShop' %}
                <a href="{{ block.settings.link }}"
                  class="shop-now-btn"
                  {% if block.settings.open_in_new_tab %}
                    target="_blank"
                  {% endif %}
                >
                  {{ block.settings.label }}
                  <span class="arrow-icon">
                    <svg width="24" height="8" viewBox="0 0 24 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <line x1="0" y1="4" x2="22" y2="4" stroke="#ffff" stroke-width="1.5"/>
                      <path d="M18 0 L24 4 L18 8" stroke="#ffff" stroke-width="1.5" fill="none"/>
                    </svg>
                  </span>
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Right Image -->
        <div class="col-lg-6 col-md-12 p-0">
          <img src="{{ 'right.png' | asset_url }}" alt="Right Decorative Illustration" class="bg-right">
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  {% for block in section.blocks %}
    {% if block.type == 'textFooter' %}
        <footer class="footer">{{ block.settings.textFooter }}</footer>
      {% endif %}
    {% endfor %}

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="{{ 'banner.js' | asset_url }}" defer></script>
</body>

{% schema %}
{
  "name": "Banner",
  "settings": [],
  "blocks": [
    {
      "type": "textHeading",
      "name": "Heading",
      "settings": [
        {
          "type": "richtext",
          "id": "textHeading",
          "label": "Heading",
          "default": "<p>The Gift Guide</p>"
        }
      ]
    },
    {
      "type": "textDesc",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "textDesc",
          "label": "Description",
          "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
        }
      ]
    },
    {
      "type": "textSubTitle",
      "name": "SubTitle",
      "settings": [
        {
          "type": "richtext",
          "id": "textSubTitle",
          "label": "SubTitle",
          "default": "<p>Find the ideal gift for your loved ones.</p>"
        }
      ]
    },
    {
      "type": "textTitle",
      "name": "Title",
      "settings": [
        {
          "type": "richtext",
          "id": "textTitle",
          "label": "Title",
          "default": "<p>TISSO VISON</p>"
        }
      ]
    },
    {
      "type": "buttonGift",
      "name": "Button Gift",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
          "default": "Choose Gift"
        }
      ]
    },
    {
      "type": "buttonShop",
      "name": "Button Shop",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
          "default": "Shop Now"
        }
      ]
    },
      {
      "type": "textFooter",
      "name": "Footer",
      "settings": [
        {
          "type": "richtext",
          "id": "textFooter",
          "label": "Footer",
          "default": "<p>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>"
        }
      ]
    },
  ]
}
{% endschema %}
