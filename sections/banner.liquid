
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>The Gift Guide - Tisso Vison</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom Styles -->
  <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}" />
</head>
<body>

  <!-- NAVBAR -->
  <header class="navbar bg-light border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
    <div class="logo fw-bold fs-5">TISSO VISON</div>
    <div class="nav-center text-center d-none d-md-block">
      Find the ideal gift for your loved ones.
    </div>
    <button class="choose-gift-btn">CHOOSE GIFT
      <span class="arrow-icon">
        <svg width="24" height="8" viewBox="0 0 24 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="0" y1="4" x2="22" y2="4" stroke="#000000" stroke-width="1.5"/>
          <path d="M18 0 L24 4 L18 8" stroke="#000000" stroke-width="1.5" fill="none"/>
        </svg>
      </span>
    </button>
  </header>

  <!-- COVER SECTION -->
  <section class="cover">
    <!-- Top Decorative Cover -->
    <div class="cover-top">
      <img src="{{ 'top.png' | asset_url }}" alt="Top Decorative Background" class="bg-top img-fluid" />
    </div>

    <!-- Main Content Row -->
    <div class="cover-body container-fluid">
      <div class="row align-items-center no-gutters">

        <!-- Left Text Content -->
        <div class="col-lg-6 col-md-12">
          <div class="px-5 px-md-4 px-lg-5 py-4">
            <h1 class="title">The Gift Guide</h1>
            <p class="subtitle">
              Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection
              and find the perfect gifts to delight your loved ones this holiday season.
            </p>
            <button class="shop-now-btn">SHOP NOW
              <span class="arrow-icon">
                <svg width="24" height="8" viewBox="0 0 24 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <line x1="0" y1="4" x2="22" y2="4" stroke="#fff" stroke-width="1.5"/>
                  <path d="M18 0 L24 4 L18 8" stroke="#fff" stroke-width="1.5" fill="none"/>
                </svg>
              </span>
            </button>
          </div>
        </div>

        <!-- Right Image -->
        <div class="col-lg-6 col-md-12 p-0">
          <img src="{{ 'right.png' | asset_url }}" alt="Right Decorative Illustration" class="bg-right" />
        </div>
      </div>
    </div>
  </section>


  <!-- FOOTER -->
  <footer class="footer">
    SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

